@namespace MyApplication.Component

<MudDialog>
    <TitleContent>
        <MudText Class="mt-5 ms-5" Typo="Typo.h5">
            Atualizar
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer>
            <MudPaper Elevation="0">
                <MudText>Nome: *</MudText>
                <MudTextField @bind-Value="Name" ReadOnly=@ReadOnly Variant="Variant.Outlined"></MudTextField>
            </MudPaper>
            <MudPaper Class="mt-2" Elevation="0">
                <MudText>Descrição:</MudText>
                <MudTextField @bind-Value="Description" ReadOnly=@ReadOnly Lines="3" Variant="Variant.Outlined"></MudTextField>
            </MudPaper>
            <MudPaper Class="mt-2" Elevation="0">
                <MudText>Campos obrigatórios.</MudText>
                <MudSwitch Label="Ativo" ReadOnly=@ReadOnly Color="Color.Primary" @bind-Checked="@Actived"/>
            </MudPaper>
            <MudPaper Class="d-flex mt-2 mb-5" Elevation="0">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="Cancel">Voltar</MudButton>
            </MudPaper>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public bool Actived { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    void Cancel() => MudDialog.Cancel();
}